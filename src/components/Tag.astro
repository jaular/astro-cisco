---
type Props = {
  tag: string;
};

const { tag } = Astro.props;
---

<a href={`/blog/${tag}`} class="text-xs lowercase font-medium">
  <span
    class="bg-gray-200/50 dark:bg-black-600 rounded px-2 py-0.5 text-black dark:text-white hover:bg-blue hover:text-white dark:hover:bg-blue dar:hover:text-white"
  >
    {tag}
  </span>
</a>
